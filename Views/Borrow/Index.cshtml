@using programmeringmed.Net3.Controllers
@model IEnumerable<programmeringmed.Net3.Models.BorrowModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Book Title
            </th>
            <th>
                Person Name
            </th>
            <th>
                Borrow Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{
                        // Hämta boktitel för det aktuella lånet
                        var bookTitle = await GetBookTitle(item.BookId);
                    }
                    @bookTitle
                </td>
                <td>
                    @{
                        // Hämta personens namn för det aktuella lånet
                        var personName = await GetPersonName(item.PersonId);
                    }
                    @personName
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BorrowDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
